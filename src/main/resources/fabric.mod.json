{
  "schemaVersion": 1,
  "id": "recallstaffs",
  "version": "${version}",

  "name": "Recall Staffs",
  "description": "Adds recall staffs that let you teleport to your spawn location and recovery altar used to safely recover items after death",
  "authors": [
    "Wookash Fryc",
    "sheslong (artist)"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/recall-staffs",
    "sources": "https://github.com/Xires87/RecallStaffs",
    "issues": "https://github.com/Xires87/RecallStaffs/issues"
  },

  "license": "MIT",
  "icon": "assets/recallstaffs/textures/item/netherite_recall_staff.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.fryc.recallstaffs.RecallStaffs"
    ],
    "client": [
      "net.fryc.recallstaffs.RecallStaffsClient"
    ],
    "modmenu": [
      "net.fryc.recallstaffs.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "recallstaffs.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.16.2",
    "fabric-api": "*",
    "minecraft": "~1.21",
    "java": ">=21",
    "craftingmanipulator": ">=5.2.0",
    "cloth-config": ">=15.0.128"
  },
  "suggests": {
    "another-mod": "*"
  }
}
