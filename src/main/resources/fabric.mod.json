{
  "schemaVersion": 1,
  "id": "recallstaffs",
  "version": "${version}",

  "name": "Recall Staffs",
  "description": "Adds recall staffs that let you teleport to your spawn location",
  "authors": [
    "Wookash Fryc",
    "sheslong (artist)"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/recall-staffs",
    "sources": "https://github.com/Xires87/RecallStaffs",
    "issues": "https://github.com/Xires87/RecallStaffs/issues"
  },

  "license": "MIT",
  "icon": "assets/recallstaffs/textures/item/netherite_recall_staff.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.fryc.recallstaffs.RecallStaffs"
    ],
    "client": [
      "net.fryc.recallstaffs.RecallStaffsClient"
    ],
    "modmenu": [
      "net.fryc.recallstaffs.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "recallstaffs.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.22",
    "fabric-api": "*",
    "minecraft": "~1.20",
    "java": ">=17",
    "craftingmanipulator": ">=4.0.0",
    "cloth-config": ">=12.0.109"
  },
  "suggests": {
    "another-mod": "*"
  }
}
